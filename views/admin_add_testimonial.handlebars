
<h1>Add A New Testimonial</h1>
<div class="row">
    <form class="col-sm-8" id="testimonial-submit-form">
        <div class="form-group">
            <label for="client">Client Name: </label>
            <input class="short-text form-control" type="text" id="client" name="client" />
        </div>
        <div class="form-group">
            <label for="testimonial-date">Testimonial Date: </label>
            <input class="short-text form-control" type="date" id="testimonial-date" name="date" />
        </div>
        <div class="form-group">
            <label for="message">Testimonial Message: </label>
            <textarea rows="10" id="message" class="form-control" type="text" id="message" name="client"></textarea>
        </div>
        <button id="testimonial-submit-button" class="btn btn-success">Add Testimonial</button>
    </form>
    <div class="col-sm-4"></div>
</div>
<script>
    $("#testimonial-submit-button").click(function(event){
        event.preventDefault();
        var testimonial = JSON.stringify($("#testimonial-submit-form").serializeArray());
        admin.AddTestimonial(testimonial);
    });
</script>